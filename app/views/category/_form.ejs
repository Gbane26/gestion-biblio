<form class="row row-cols-lg-auto g-3 align-items-center" method="post" action="<%= action %>">

    <div data-mdb-input-init class="form-outline mb-4">
        <input type="text" class="form-control" id="name" name="name"  <% if(categories) { %> value="<%= categories.name %>" <% } %> required>
        <label class="form-label" for="name">Nom de la category</label>
    </div>

    <div data-mdb-input-init class="form-outline mb-4">
        <textarea class="form-control" id="description" name="description" ><% if(categories) { %> <%= categories.description %> <% } %></textarea>
        <label class="form-label" for="name">Description de la category</label>
    </div>


    <div class="row col-6 mx-auto">
        <button type="submit" class="btn btn-dark btn-lg btn-block"><%= submitLabel %></button>
				<a href="/category" class="btn btn-outline-dark my-2">RETOUR</a>
    </div>

</form>
